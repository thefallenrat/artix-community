# Maintainer: artoo <artoo@artixlinux.org>

pkgbase=sddm-theme
pkgname=('artix-sddm-theme')
pkgver=0.5
pkgrel=1
pkgdesc="Artix theme for SDDM"
arch=('any')
url="https://gitea.artixlinux.org/artix/sddm-theme"
license=('GPL')
makedepends=('git')
depends=('sddm' "artix-backgrounds")
source=("${pkgbase}-${pkgver}.tar.gz::${url}/archive/${pkgver}.tar.gz")
sha256sums=('f4ffb726fcdc28b68d920940b962847643cc50b14f623a800db422052509a46a')

package_artix-sddm-theme() {
    cd ${pkgbase} #-${pkgver}
    make PREFIX=/usr DESTDIR=${pkgdir} install
}
